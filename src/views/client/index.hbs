    <li class='nav-item' role='presentation'>
        <a
            class='nav-link'
            id='ex1-tab-2'
            data-mdb-toggle='tab'
            href='#ex1-tabs-2'
            role='tab'
            aria-controls='ex1-tabs-2'
            aria-selected='false'
        >HK2 năm 2</a>
    </li>
    <li class='nav-item' role='presentation'>
        <a
            class='nav-link'
            id='ex1-tab-2'
            data-mdb-toggle='tab'
            href='#ex1-tabs-2'
            role='tab'
            aria-controls='ex1-tabs-2'
            aria-selected='false'
        >HK1 năm 2</a>
    </li>
    <li class='nav-item' role='presentation'>
        <a
            class='nav-link'
            id='ex1-tab-2'
            data-mdb-toggle='tab'
            href='#ex1-tabs-2'
